{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [],
    "outDir": "dist",
    "noEmit": false,
    "esModuleInterop": true,
    "isolatedModules": false,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
